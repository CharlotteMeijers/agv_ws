<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

  <xacro:include filename="$(find ldlidar_node)/urdf/ldlidar_descr.urdf.xml" />

  <xacro:macro name="add_lidar_mount" params="parent_link">
    <joint name="ldlidar_mount_joint" type="fixed">
      <parent link="${parent_link}"/>
      <child link="ldlidar_base"/>
      <origin xyz="0.28 0 -0.11" rpy="0 0 -1.5708"/>
    </joint>
  </xacro:macro>

</robot>
